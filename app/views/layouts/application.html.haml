!!!
%html
  %head
    %title
      CashHoppers
    = stylesheet_link_tag 'application', controller_path, media: :all
    = javascript_include_tag 'application', controller_path
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    = csrf_meta_tags
  %body
    .header
      .header-content
        .header-left
          %ul
            %li
              ABOUT
            %li
              HOW TO PLAY
            %li
              PHOTO GALLERY
            %li
              BUSINESES
            %li
              SHOWS & EVENTS
        .header-right
          .button-container
            %input.btn.btn-large.btn-warning{value: 'DOWNLOAD THE APP', type: :button}
      = image_tag 'logo.png'
    .row-fluid.container-grid
      .span10.offset1
        .page-header
          .row-fluid
            .span12.text-right
              = render partial: 'layouts/authentication'
        .row-fluid
          - if flash[:error]
            .alert.alert-error
              %button.close{type: :button, 'data-dismiss' => 'alert'}
                &times;
              = flash[:error]
          - elsif flash[:success]
            .alert.alert-success
              %button.close{type: :button, 'data-dismiss' => 'alert'}
                &times;
              = flash[:success]
          - elsif flash[:notice]
            .alert.alert-notice
              %button.close{type: :button, 'data-dismiss' => 'alert'}
                &times;
              = flash[:notice]
        .row-fluid
          .span2
            = render partial: 'layouts/sidebar'
            = yield :sidebar
            = controller.sidebar ? (render :partial => "#{controller.sidebar}") : ''
          .span10
            .well
              = controller.sub_layout ? (render :partial => "#{controller.sub_layout}") : yield

