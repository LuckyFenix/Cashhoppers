<!DOCTYPE html>
<html>
<head>
  <title>CashHoppers</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "bootstrap", :media => "all" %>
  <%= stylesheet_link_tag    "bootstrap-responsive", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "bootstrap" %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= csrf_meta_tags %>
</head>
<body>
    <br/>
    <div class="container-fluid page">
      <div class="row-fluid">
        <div class="span12">
          <div class="container">
            <div class="container">
              <div class="row">
                <div class="span7">
                    <h1>CashHoppers</h1>
                </div>
                <div class="span5">
                  <%= render :partial => 'layouts/authentication' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span12">
          <% if flash[:error] || flash[:notice]%>
            <div class="alert <%= "alert-success" if flash[:success]%> <%= "alert-block" if flash[:notice]%> <%= "alert-error" if flash[:error]%>">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <%= flash[:error]%>
              <%= flash[:notice]%>
            </div>
          <% end %>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span4">
          <div class="hero-unit">
            <%= yield :sidebar %>
          </div>
        </div>
        <div class="span8">
          <div class="hero-unit">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
</body>
</html>


