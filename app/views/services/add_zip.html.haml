= form_tag(controller: "services", action: "create", :method => "post") do
  .control-group
    .control-label
      Service:
      = @service
      = hidden_field_tag :service, @service, class: 'span12'
  .control-group
    .control-label
      Name:
      = @name
      = hidden_field_tag :name, @name, class: 'span12'
  .control-group
    .control-label
      First Name:
      = @first_name
      = hidden_field_tag :first_name, @first_name, class: 'span12'
  .control-group
    .control-label
      Last Name:
      = @last_name
      = hidden_field_tag :last_name, @last_name, class: 'span12'
  .control-group
    .control-label
      UID:
      = @uid
      = hidden_field_tag :uid, @uid, class: 'span12'
  .control-group
    .control-label
      Provider:
      = @provider
      = hidden_field_tag :provider, @provider, class: 'span12'
  - if @service == 'twitter'
    .control-group
      .control-label
        = label_tag :email, 'Put your email:'
      .controls
        = email_field_tag :email, '', class: 'span12'
    .control-group
      .control-label
        Link:
        = @twitter_link
        = hidden_field_tag :twitter_link, @twitter_link, class: 'span12'
  - elsif @service == 'facebook'
    .control-group
      .control-label
        E-mail:
        = @email
        = hidden_field_tag :email, @email, class: 'span12'
    .control-group
      .control-label
        Link:
        = @facebook_link
        = hidden_field_tag :facebook_link, @facebook_link, class: 'span12'
  - elsif @service == 'google'
    .control-group
      .control-label
        E-mail:
        = @email
        = hidden_field_tag :email, @email, class: 'span12'
  .control-group
    .control-label
      = label_tag :zip, 'Put your zip:'
    .controls
      = text_field_tag :zip, '', class: 'span12'
  .control-group
    .controls
      = submit_tag 'Sign up'