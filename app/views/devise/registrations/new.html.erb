<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :first_name %><br />
  <%= f.text_field :first_name %></div>

  <div><%= f.label :last_name %><br />
  <%= f.text_field :last_name %></div>

  <div><%= f.label :zip %><br />
  <%= f.text_field :zip %></div>

  <div><%= f.label :user_name %><br />
  <%= f.text_field :user_name %></div>

  <div><%= f.label :password%><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :avatar %><br />
  <%= f.file_field :avatar %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>


<section id="deviseauth">
  <div id="remote2">
    <div id="terms" class="box">
      Remote
    </div>
    <div id="services" class="box">
      <a href="/auth/facebook" class="services"><%= image_tag "facebook.png", :size => "64x64",  :alt => "Facebook" %>Facebook</a>
      <a href="/auth/twitter" class="services"><%= image_tag "twitter.png", :size => "64x64",  :alt => "Twitter" %>Twitter</a>
    </div>
  </div>

</section>
