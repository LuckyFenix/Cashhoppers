
<%= form_for(:hop_task) do |f| %>

    <div class="field">
      <%= f.label :text_for_hop %><br />
      <%= f.text_area :text_for_hop %>
    </div>
    <div class="field">
      <%= f.label :sponsor_id %><br />
      <%= f.number_field :sponsor_id %>
    </div>
