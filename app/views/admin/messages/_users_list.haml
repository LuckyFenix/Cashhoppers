#users_list
  .row-fluid
    .span7
      = will_paginate @users, renderer: BootstrapPagination::Rails, inner_window: 0, outer_window: 0
    .span5.text-right.row
      = text_field_tag :input, params[:query], class: 'span7', id: 'search_field'
      = link_to 'Search',  admin_messages_email_tool_path, class: 'btn span4', id: 'search_button'
  %table.table.table-condensed
    %tr
      %th
        Id
      %th
        User Name
      %th
    - @users.each do |user|
      %tr
        %td
          = user.id
        %td
          = user.user_name
        %td{style: 'text-align: right'}
          - if params[:selected_users].include?(user.id.to_s)
            %button.btn.btn-mini
              Add
          - else
            %button.btn.btn-mini.btn-success{onclick: "select_user( this, '#{user.id}', '#{user.first_name}')"}
              Add
  = will_paginate @users, renderer: BootstrapPagination::Rails