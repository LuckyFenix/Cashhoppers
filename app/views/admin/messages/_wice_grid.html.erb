

<%= grid(@hops_grid, upper_pagination_panel: true,  allow_showing_all_records:  false) do |g|


  g.last_row do |number_of_columns|
    content_tag(:tr,
                content_tag(:td,
                            content_tag(:button, "Don't panic", class: "btn btn-info"),
                            colspan: 9),
                class: 'last-row pull-right')
  end

  g.action_column

  g.column name:'ID', attribute: 'id', filter_type: :range



  g.column name:'Name', attribute: 'name'


  g.column name:'Time start', attribute: 'time_start' , helper_style: :standard do |hop|
    hop.time_start.to_s()
  end

  g.column name:'Daily', attribute: 'daily', auto_reload:  true do |hop|
    hop.daily ? 'Yes' : 'No'
  end

  g.column name:'Close', attribute: 'close', auto_reload:  true do |hop|
    hop.close ? 'Yes' : 'No'
  end


end -%>

