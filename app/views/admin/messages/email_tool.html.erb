  </tr>
  <tr>
    <td></td>
    <td><%= text_area_tag(:user, nil, :class=>"input-xlarge",  :placeholder=>"CONTENT", :rows=>"10") %></td>
  </tr>
  <tr>
    <td><%= submit_tag("SEND", :class=>"input-medium btn btn-success", "data-toggle" => "modal" ) %></td>
