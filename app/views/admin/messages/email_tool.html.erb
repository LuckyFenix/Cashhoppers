<h1>Send emails</h1>
<br />
<%= form_tag() do %>
<table>
  <tr>
    <td class ="span4">Filters</td>
    <td class ="span4">Hop</td>
    <td class ="span4">Zip code</td>
    <td class ="span4">User id</td>
  </tr>
  <tr>
    <td><%= %></td>
    <td>
      <%= text_field_tag(:hop, nil, :class=>"input-mini", "data-toggle" => "modal", "href"=>"#my-modal") %>
    </td>

    <td><%= text_field_tag(:zip, nil, :class=>"input-mini") %></td>
    <td><%= text_field_tag(:user, nil, :class=>"input-mini") %></td>
  </tr>
</table>

<table>
  <tr>
    <td class="span5"><%= text_field_tag(:user, nil, :class=>"input-medium", :placeholder=>"TEMPLATE") %></td>
    <td><%= text_field_tag(:user, nil, :class=>"input-xlarge", :placeholder=>"SABJECT LINE") %></td>
  </tr>
  <tr>
    <td><%= text_field_tag(:user, nil, :class=>"input-medium",  :placeholder=>"SEND FORM") %></td>
    <td></td>
  </tr>
  <tr>
    <td><%= text_field_tag(:user, nil, :class=>"input-medium",  :placeholder=>"ATTACHE FILE") %></td>
    <td></td>
  </tr>
  <tr>
    <td></td>
    <td><%= text_area_tag(:user, nil, :class=>"input-xlarge",  :placeholder=>"CONTENT", :rows=>"10") %></td>
  </tr>
  <tr>
    <td><%= submit_tag("SEND", :class=>"input-medium btn btn-success", "data-toggle" => "modal" ) %></td>
  </tr>
</table>
<% end %>

<div class="pull-right"><%= link_to "Email history"%></div>

<div class="modal hide fade in" id="my-modal" title="My modal">
  <div class="modal-header">
    <button aria-hidden="true" class="close" data-dismiss="modal" type="button">Ã—</button>
    <h3 id="myModalLabel">Modal header</h3>
  </div>
  <div class="modal-body">
    Modal Body
  </div>
  <div class="modal-footer">
    <button aria-hidden="true" class="btn" data-dismiss="modal">Close</button>
  </div>
</div>


