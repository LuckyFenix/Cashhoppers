<%= form_for([:admin, @hop ]) do |f| %>
  <% if @hop.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hop.errors.count, "error") %> prohibited this hop from being saved:</h2>

      <ul>
      <% @hop.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field">
    <b>Hop name</b>
    <%= f.text_field :name, :html=>{:placeholder=>"Name"}%>
  </div>
  <div class="field">
    <b>Dates/times of hop</b>
    <%= f.hidden_field :daily_hop %>
    <div id="datetimepicker1" class="input-append date">
      <%= f.text_field :time_start, 'data-format' => 'dd/MM/yyyy hh:mm:ss', 'type' => 'text' %>
      <span class="add-on">
        <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
        <script>
          $(function(){
              $('#datetimepicker1').datetimepicker({
                  language: 'pt-BR'
              });
          });
        </script>
      </span>
    </div>

    <% if !@hop.daily_hop %>
    <b> to </b>
    <div id="datetimepicker2" class="input-append date">
      <%= f.text_field :time_end, 'data-format' => 'dd/MM/yyyy hh:mm:ss', 'type' => 'text' %>
      <span class="add-on">
        <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
        <script>
            $(function(){
                $('#datetimepicker2').datetimepicker({
                    language: 'pt-BR'
                });
            });
        </script>
      </span>
    </div>
  </div>


    <div class="field">
      <b> Hop code </b>
      <%= f.text_field :code %>
    </div>
    <div class="field">
      <b>  Hop price </b>
      <%= f.text_field :price %>
    </div>

    <div class="field">
      <b> Special event  </b>
      <%= f.text_field :event %>
    </div>
    <div class="field">
      <b>  Jackpot </b>
      <%= f.text_field :jackpot %>
    </div>

  <%end%>
    <br />
    <div class="actions">
       <%= f.submit %>
    </div>
<% end %>


