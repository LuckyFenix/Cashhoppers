<br />
<% @hop.hop_tasks.each do |hop_task| %>
<table id="show">
  <tr>
    <td><strong>Sponsor name:</strong></td>
    <td><strong>price:</strong></td>
    <td><strong>text:</strong></td>
    <td></td>
    <td></td>
    <td></td>

  <tr>

  <tr>
    <td>

      <%= hop_task.sponsor_name %>
    </td>
    <td>

      <%= hop_task.hop_task_price %>
    </td>
    <td>

      <%= hop_task.text_for_hop %>
    </td>

    <td><%= link_to 'Show', admin_hop_task_path(hop_task.id)  %></td>
