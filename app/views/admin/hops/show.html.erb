<% end %>

<br />

<%= form_tag admin_hop_tasks_path, :multipart => true do %>
   <table id="show">
     <tr>
       <td><%= label_tag :text_for_hop %></td>
       <td><%= text_area_tag :text_for_hop %> </td>
     </tr>

     <tr>
      <td><%= label_tag :hop_task_price %></td>
      <td><%= number_field_tag :hop_task_price %></td>
     </tr>

     <% if @hop.daily_hop %>
       <tr>
         <td><%= label_tag :pts %></td>
         <td><%= number_field_tag :pts %></td>
       </tr>

       <tr>
         <td><%= label_tag :bonus %></td>
         <td><%= number_field_tag :bonus %></td>
       </tr>
     <% end %>

     <tr>
       <td><%= label_tag :sponsor_name %></td>
       <td><%= number_field_tag :sponsor_name %></td>
     </tr>

     <tr>
        <td><%= label_tag :hop_picture %></td>
        <td><%= file_field_tag :hop_picture %></td>
     </tr>



     <tr>
        <td> <%= hidden_field_tag :hop_id, @hop.id %></td>
        <td><%= submit_tag %> </td>
     </tr>

   </table>
<% end %>
