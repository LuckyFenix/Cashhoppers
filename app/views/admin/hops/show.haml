      %td
        - if @hop.producer
          = @hop.producer.contact
    %tr
      %td
        %b
          Producer Phone:
      %td
        - if @hop.producer
          = @hop.producer.phone
    %tr
      %td
        %b
          Producer Email:
      %td
        - if @hop.producer
          = @hop.producer.email
    %tr
      %td
        %b
          Code:
      %td
        = @hop.code
    %tr
      %td
        %b
          Price:
      %td
        = @hop.price
    %tr
      %td
        %b
          Jackpot:
      %td
        = @hop.jackpot
    %tr
      %td
        %b
          Special event:
      %td
        = @hop.event
