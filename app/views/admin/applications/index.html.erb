<h1>Listing admin_applications</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Api key</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @applications.each do |application| %>
  <tr>
    <td><%= application.name %></td>
    <td><%= application.description %></td>
    <td><%= application.api_key %></td>
    <td><%= link_to 'Show', admin_application_path(application) %></td>
    <td><%= link_to 'Edit', edit_admin_application_path(application) %></td>
    <td><%= link_to 'Destroy', admin_application_path(application), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

