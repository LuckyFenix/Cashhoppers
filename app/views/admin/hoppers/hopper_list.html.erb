<%= form_tag admin_hoppers_search_hoppers_path do %>
    <table class="pull-right"  >
      <tr>
        <td class ="span4">By hop id</td>
        <td class ="span4">By zip</td>
      </tr>
      <tr>
        <td><%= text_field_tag(:hop_id, nil, :class=>"input-mini")%></td>
        <td><%= text_field_tag(:zip, nil, :class=>"input-mini") %></td>
      </tr>
      <tr>
        <td><%= submit_tag("Find hopper", :class=>"span9 pull-right" ) %></td>
      </tr>
