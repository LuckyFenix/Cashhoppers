#hops_list
  .row-fluid
    .span7
      = will_paginate @hops, renderer: BootstrapPagination::Rails, inner_window: 0, outer_window: 0
    .span5.text-right.row
      = text_field_tag :input, params[:query], class: 'span7', id: 'search_field'
      %button.btn.text_right{:onclick => "select_hop('#{admin_hoppers_select_hop_path()}')"}
        Select
  %table.table.table-condensed
    %tr
      %th
        Id
      %th
        Name
      %th
    - @hops.each do |hop|
      %tr
        %td
          = hop.id
        %td
          = hop.name

        %td{style: 'text-align: right'}
          %button.btn.btn-mini.btn-success{:onclick => "select_hop('#{admin_hoppers_select_hop_path(:id =>hop.id)}')"}
            Select
  = will_paginate @hops, renderer: BootstrapPagination::Rails