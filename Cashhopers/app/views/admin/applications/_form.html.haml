= form_for([:admin, @application], class: 'form-horizontal') do |f|
  .control-group
    .control-label
      Name
    .controls
      = f.text_field :name, class: 'span12'
  .control-group
    .control-label
      Description
    .controls
      = f.text_area :description, rows: 5, class: 'span12'
  .control-group
    .control-label
      Api key
    .controls
      = f.text_field :api_key, class: 'span12'
  .control-group
    .controls
      = f.submit class: 'btn btn-info'
