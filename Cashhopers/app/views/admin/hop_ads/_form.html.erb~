      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="field">
      <%= f.label :ad_name %><br />
      <%= f.text_area :ad_name %>
    </div>
    <div class="field">
      <%= f.label :contact %><br />
      <%= f.number_field :contact %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :phone %><br />
      <%= f.file_field :phone %>
      <div class="actions">
   <div class="field">
