  - if @hop_ad.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hop_ad.errors.count, "error")} prohibited this hop_ad from being saved:"
      %ul
        - @hop_ad.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :ad_name
    = f.text_field :ad_name
  .field
    = f.label :contact
    = f.text_field :contact
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :price
    = f.text_field :price
  .actions
    = f.submit 'Save'
