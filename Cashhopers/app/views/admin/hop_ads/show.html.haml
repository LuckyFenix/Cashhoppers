<%= form_for(:hop_ad) do |f| %>

    <div class="field">
      <%= f.label :ad_name %><br />
      <%= f.text_area :ad_name %>
    </div>
    <div class="field">
      <%= f.label :contact %><br />
      <%= f.number_field :contact %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :phone %><br />
      <%= f.file_field :phone %>
      <div class="actions">
        <%= f.submit %>
      </div>
<% end %>


<%= link_to 'Edit', edit_admin_hop_ad_path(@hop_ad.hop, @hop_ad) %> |
<%= link_to 'Back', admin_hop_path(@hop_ad.hop) %>
