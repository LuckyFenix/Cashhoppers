    <%= f.label :time_start %><br />
    <%= f.text_field :time_start %>
  </div>
  <div class="field">
    <%= f.label :time_end %><br />
    <%= f.text_field :time_end %>
  </div>



  <div class="field">
    <%= f.label :producer_contact %><br />
    <%= f.text_field :producer_contact %>
  </div>
  <div class="field">
    <%= f.label :contact_phone %><br />
    <%= f.text_field :contact_phone %>
  </div>
  <div class="field">
    <%= f.label :contact_email %><br />
    <%= f.text_field :contact_email %>
  </div>
  <div class="field">
    <%= f.label :hop_code %><br />
    <%= f.text_field :hop_code %>
  </div>
  <div class="field">
    <%= f.label :hop_price %><br />
    <%= f.text_field :hop_price %>
  </div>
  <div class="field">
    <%= f.label :jackpot %><br />
    <%= f.text_field :jackpot %>
  </div>
  <div class="field">
